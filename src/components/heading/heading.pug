mixin heading ({level, title, font} = {})

  -
    let className = 'heading _level_'
    const fontModifier = `_font_${font}`
    const levels = [1, 2, 3, 4, 5, 6]
    const headingLevel = levels.includes(level) ? level : 3
    const tagName = `h${headingLevel}`

  #{tagName}(class= font ? `${className}${headingLevel} ${fontModifier}` : `${className}${headingLevel}`)= title
